{
	"name": "HEIG-VD DévProdMéd Course Development Container",
	"dockerComposeFile": "compose.yaml",
	"service": "devcontainer",
	"runServices": ["mariadb", "plantuml"],
	"workspaceFolder": "/workspace",
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"moby": false
		},
		"ghcr.io/devcontainers/features/node:1": {
			"version": "24"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"cweijan.vscode-database-client2",
				"DavidAnson.vscode-markdownlint",
				"esbenp.prettier-vscode",
				"GitHub.copilot",
				"jebbs.plantuml",
				"laravel.vscode-laravel",
				"marp-team.marp-vscode",
				"redhat.vscode-yaml",
				"shufo.vscode-blade-formatter",
				"streetsidesoftware.code-spell-checker",
				"streetsidesoftware.code-spell-checker-french",
				"tomoki1207.pdf",
				"yzhang.markdown-all-in-one"
			]
		}
	},
	// Map the user's SSH directory to the container for SSH signing
	"mounts": [
		"type=bind,source=${localEnv:HOME}/.ssh,target=${localEnv:HOME}/.ssh,type=bind,consistency=cached"
	],
	// Ports to expose on the container's network host
	"forwardPorts": [3306, 5173, 8000, 9090],
	"portsAttributes": {
		"3306": {
			"label": "MariaDB Database"
		},
		"5173": {
			"label": "Vite Development Server"
		},
		"8000": {
			"label": "Laravel Development Server"
		},
		"9090": {
			"label": "PlantUML Server"
		}
	},
	// Execute the post-create.sh script once the container is created
	"postCreateCommand": ".devcontainer/post-create.sh"
}
